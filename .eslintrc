env:
    node: true

rules:
    block-scoped-var: 2,
    quotes: [1, "single"]
    strict: 0
    indent: [2, 2]
    brace-style: [2, "1tbs"]
    comma-style: [2, "last"]
    default-case: 2
    func-style: [2, "declaration"]
    guard-for-in: 2
    no-floating-decimal: 2
    no-nested-ternary: 1
    no-undefined: 2
    radix: 2
    space-after-function-name: [2, "never"]
    space-after-keywords: [2, "always"]
    space-before-blocks: 2
    spaced-line-comment: [2, "always", { exceptions: ["-"]}]
    wrap-iife: 2
    no-underscore-dangle: 0
    camelcase: 1
    no-shadow: 0
